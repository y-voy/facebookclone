<h1>詳細画面</h1>
<p>内容: <%= @picture.content %></p>
<p>画像: <%= image_tag @picture.image.url if @picture.image && @picture.image.url %></p>
<% unless @picture.user_id == current_user.id %>
  <% if @favorite.present? %>
    <%= link_to '「いいね」を解除する', favorite_path(id: @favorite.id), method: :delete, class: 'btn btn-danger' %>
  <% else %>
    <%= link_to '「いいね」をする', favorites_path(picture_id: @picture.id), method: :post, class: 'btn btn-primary' %>
  <% end %>
<% end %>
<%= link_to '投稿一覧へ', pictures_path %>
